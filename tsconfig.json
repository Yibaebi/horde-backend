{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@": ["./src"],
      "@/config/*": ["config/*"],
      "@/utils/*": ["utils/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/models/*": ["models/*"],
      "@/schemas/*": ["schemas/*"],
      "@/controllers/*": ["controllers/*"],
      "@/constants/*": ["constants/*"],
      "@/routes": ["routes/index"],
      "@/routes/*": ["routes/*"],
      "@/seeds/*": ["seeds/*"],
      "@/scripts/*": ["scripts/*"],
      "@/auth/*": ["auth/*"],
      "@/services/*": ["services/*"],
      "@/types": ["types/index"]
    }
  },
  "include": ["src", "package.json", "global.d.ts"]
}
